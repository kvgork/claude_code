# Anthropic API Configuration
ANTHROPIC_API_KEY=your_api_key_here

# Claude Model Configuration
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# SDK Settings
MAX_TOKENS=8192
TEMPERATURE=1.0
PERMISSION_MODE=ask

# Client Mode Configuration
# Options: api, cli, auto (default: auto)
# - api: Use Claude API directly (faster, uses quota)
# - cli: Use Claude Code CLI (no quota usage)
# - auto: Start with API, fallback to CLI when quota exhausted
CLAUDE_CLIENT_MODE=auto

# Optional: Claude CLI path (if not in system PATH)
# CLAUDE_CLI_PATH=/usr/local/bin/claude

# Git Integration Configuration
# Enable automatic Git integration for learning sessions
CLAUDE_ENABLE_GIT=true

# Auto-create a Git branch for each new learning session
CLAUDE_AUTO_CREATE_BRANCH=true

# Auto-commit changes after each phase completion
CLAUDE_AUTO_COMMIT=true

# Auto-push commits to remote repository
CLAUDE_AUTO_PUSH=true

# Optional: Override Git author information
# GIT_AUTHOR_NAME=Your Name
# GIT_AUTHOR_EMAIL=your.email@example.com

# Optional: Override workspace paths
# WORKSPACE_ROOT=/path/to/workspace
# AGENTS_DIR=/path/to/agents
# COMMANDS_DIR=/path/to/commands
# PLANS_DIR=/path/to/plans
